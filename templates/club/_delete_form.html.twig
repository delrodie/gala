<form method="post" action="{{ path('club_delete', {'id': club.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce club?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club.id) }}">
    <button class="btn btn-danger">{{'form.btnDelete'|trans}}</button>
</form>
